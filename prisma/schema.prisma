generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model user {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  phone         String?
  emailVerified Boolean   @default(false)
  emailVerificationToken    String?  // Pode ser nulo após verificação
  emailVerificationExpires  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts    posts[]  // Relacionamento: Um usuário pode ter vários posts
}

model posts {
  id      Int      @id @default(autoincrement())
  userId  String   // Chave estrangeira para o usuário
  user    user     @relation(fields: [userId], references: [id]) // Relacionamento correto
  title   String?
  content String
}

